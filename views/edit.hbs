<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="d-flex justify-content-center">
        <h5>編輯餐廳</h5>
      </div>
      <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">店名:</label>
          <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}" required>
        </div>
        <div class="mb-3">
          <label for="name_en" class="form-label">英文店名:</label>
          <input type="text" class="form-control" id="name_en" name="name_en" value="{{restaurant.name_en}}"
            required>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">分類:</label>
          <input type="text" class="form-control" id="category" list="categoryOptions" name="category"
            value="{{restaurant.category}}" required>
          <datalist id="categoryOptions">
            <option>美式</option>
            <option>咖啡</option>
            <option>中東料理</option>
            <option>日本料理</option>
            <option>義式餐廳</option>
          </datalist>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">圖片連結:</label>
          <input type="url" class="form-control" id="image" name="image" value="{{restaurant.image}}" required>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">地址:</label>
          <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}"
            required>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">電話:</label>
          <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}" required>
        </div>
        <div class="mb-3">
          <label for="google_map" class="form-label">Google Map:</label>
          <input type="url" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}"
            required>
        </div>
        <div class="mb-3">
          <label for="rating" class="form-label">評分:</label>
          <input type="number" class="form-control" id="rating" min="0" max="5" step="0.1" name="rating"
            placeholder="0~5" value="{{restaurant.rating}}" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">介紹:</label>
          <textarea class="form-control" id="description" rows="3" name="description"
            required>{{restaurant.description}}</textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-success mt-3 mx-2">
            儲存修改
          </button>
          <a href="/"><button class="btn btn-secondary mt-3" type="button">返回首頁</button></a>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>